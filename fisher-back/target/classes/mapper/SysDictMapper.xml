<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fisher.back.mapper.SysDictMapper">

    <!-- 基本resultMap -->
    <resultMap type="com.fisher.back.model.entity.SysDict" id="SysDictMapperMap">
            <id property="id" column="id"/>
            <result property="desc" column="desc"/>
            <result property="value" column="value"/>
            <result property="parentId" column="parent_id"/>
            <result property="sortOrder" column="sort_order"/>
            <result property="remark" column="remark"/>
            <result property="delFlag" column="del_flag"/>
            <result property="createTime" column="create_time"/>
            <result property="modifyTime" column="modify_time"/>
    </resultMap>
    <select id="pageByQuery" resultMap="SysDictMapperMap">
      select * from sys_dict
        <where >
            <if test="id != '' and id != null" >
               and id = #{id}
            </if>
            <if test="value != '' and value != null">
                and  value = #{value}
            </if>
            <if test="desc != '' and desc != null">
                and   `desc`  like concat('%',#{desc},'%')
            </if>
            <if test="parentId != null">
                and  parent_id = #{parentId}
            </if>
            <if test="remark != '' and remark != null">
                and   remark  like concat('%',#{remark},'%')
            </if>
            <if test="del_flag != '' and del_flag != null">
                and  del_flag = #{delFlag}
            </if>
        </where>
    </select>

</mapper>