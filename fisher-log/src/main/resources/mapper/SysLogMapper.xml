<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fisher.log.mapper.SysLogMapper">

    <!-- 基本resultMap -->
    <resultMap type="com.fisher.log.model.entity.SysLog" id="SysLogMap">
            <id property="id" column="id"/>
            <result property="type" column="type"/>
            <result property="moduleName" column="module_name"/>
            <result property="actionName" column="action_name"/>
            <result property="serviceId" column="service_id"/>
            <result property="remoteAddr" column="remote_addr"/>
            <result property="userAgent" column="user_agent"/>
            <result property="requestUri" column="request_uri"/>
            <result property="method" column="method"/>
            <result property="params" column="params"/>
            <result property="time" column="time"/>
            <result property="exception" column="exception"/>
            <result property="delFlag" column="del_flag"/>
            <result property="createBy" column="create_by"/>
            <result property="createTime" column="create_time"/>
            <result property="updateTime" column="update_time"/>
            <result property="status" column="status"/>
    </resultMap>
        <select id="pageByQuery" resultMap="SysLogMap">
          select * from sys_log
            <where >
                <if test="id != '' and id != null" >
                   and id = #{id}
                </if>
                <if test="type != '' and type != null">
                    and  type = #{type}
                </if>
                <if test="moduleName != '' and moduleName != null">
                    and   module_name  like concat('%',#{moduleName},'%')
                </if>
                <if test="createBy != '' and createBy != null">
                    and   create_by  like concat('%',#{createBy},'%')
                </if>
                <if test="status != '' and status != null">
                    and  status = #{status}
                </if>
            </where>
        </select>

</mapper>